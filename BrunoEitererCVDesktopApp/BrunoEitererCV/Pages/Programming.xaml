<?xml version="1.0" encoding="utf-8"?>
<local:PageBase
    x:Class="BrunoEitererCV.Pages.Programming"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrunoEitererCV.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                >
        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander IsExpanded="True"
                  ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="C#"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="CSharpYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="CsharpTextBlock"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="C"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="CYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="CTextBlock" />
                </StackPanel>

            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="C++"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="CppYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="CppTextBlock" />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="Python"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="PythonYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="PythonTextBlock"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="Javascript"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="JavascriptYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="JavascriptTextBlock"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="Typescript"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="TypescriptYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="TypescriptTextBlock"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Left"
                  Header="Java"
                  >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="JavaYearsOfExperienceTextBlock"
                               FontSize="14"
                               Foreground="#555"
                               />
                    <TextBlock x:Name="JavaTextBlock"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
            </Expander>
        </Border>
    </StackPanel>
</local:PageBase>
