<?xml version="1.0" encoding="utf-8"?>
<local:PageBase
    x:Class="BrunoEitererCV.Pages.SideProjects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BrunoEitererCV.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander IsExpanded="True"
                      ExpandDirection="Down"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      Header="Lifejournaler"
                      >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="LifejournalerTextBlock"
                               TextWrapping="Wrap"
                               />
                    <FlipView Width="1000"
                              Height="500"
                              >
                        <Image Source="ms-appx:///Assets/Lifejournaler.png" />
                        <Image Source="ms-appx:///Assets/LifejournalerMoodStatistics.png" />
                    </FlipView>
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      Header="PrintReady"
                      >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="PrintReadyTextBlock"
                               TextWrapping="Wrap"
                               />
                    <Image Width="1000"
                           Height="531"
                           Source="ms-appx:///Assets/PrintReady.jpg" 
                           />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      Header="CV Desktop App"
                      >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="CVTextBlock"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      Header="Game"
                      Collapsed="OnGameExpanderCollapsed"
                      >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="GameTextblock"
                               TextWrapping="Wrap"
                               />
                    <MediaPlayerElement Source="ms-appx:///Assets/Game.mp4"
                                        Name="VideoPlayer"
                                        Width="888"
                                        Height="500"
                                        AutoPlay="False"
                                        AreTransportControlsEnabled="True"
                                        Stretch="Fill"
                                        />
                </StackPanel>
            </Expander>
        </Border>
        <Border Margin="2,2,2,10"
                Padding="2"
                CornerRadius="8"
                Translation="0,0,8"
                >
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      Header="BitbucketCommitPlotter"
                      >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="BitbucketCommitPlotterTextBlock"
                               TextWrapping="Wrap"
                               />
                    <Image Width="1000"
                           Height="167"
                           Source="ms-appx:///Assets/CommitData-BrunoVale BarbosaEiterer-2024.png"
                           />
                </StackPanel>
            </Expander>
        </Border>

        <Border Margin="2,2,2,10" Padding="2"
                CornerRadius="8"
                Translation="0,0,8">
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>

            <Expander ExpandDirection="Down"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Stretch"
                      HorizontalContentAlignment="Left"
                      Header="IPCAProcessor"
                      >

                <StackPanel Spacing="4">
                    <TextBlock x:Name="IPCAProcessorTextBlock"
                               TextWrapping="Wrap"
                               />
                </StackPanel>
            </Expander>
        </Border>
    </StackPanel>
</local:PageBase>
